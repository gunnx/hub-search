{
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/**/*.fixtures.js",
    "!src/index.js"
  ],
  "setupTestFrameworkScriptFile": "./setupTestFramework.js",
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "coverageDirectory": "report",
  "coverageReporters": [
    "json",
    "lcov",
    "cobertura",
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 90,
      "branches": 80,
      "functions": 80,
      "lines": 90
    }
  },
  "moduleNameMapper": {
    "\\.(css|scss)$": "<rootDir>/test-style-mock.js"
  },
  "testURL": "http://localhost/"
}
